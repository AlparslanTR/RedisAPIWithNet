@model List<string>
@{
    ViewData["Title"] = "Index";
}

<form asp-controller="ListTypes" asp-action="Add" method="post" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button type="submit">Kaydet</button>
</form>

@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <p>@item</p>
    }
}
else
{
    <p>Redis Sunucusunda veri yok.</p>    
}

<form asp-controller="ListTypes" asp-action="Remove" method="post" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button type="submit">Kaldır</button>
</form>


